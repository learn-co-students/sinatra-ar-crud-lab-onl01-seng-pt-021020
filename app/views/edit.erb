<form action="/articles/<%=@article.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><%=@article.title%></p>
  <input type="text" name="title">
  <p><%=@article.content%></p>
  <input type="text" name="content">
  <button type="submit">Submit</button>
</form>